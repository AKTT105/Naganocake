<div class="row">
  <h3 class="header-background col-md-2 col-md-offset-2">商品詳細</h3>
</div>

<div classs="row">
  <div class="col-md-2 col-md-offset-1">
    <%= attachment_image_tag(@product, :image, size: '170x130', fallback: "no_image.png", class: "product-detail") %>
  </div>

  <div class="col-md-7 col-md-offset-1">
    <table class="table">
    <tr class="row">
      <th class="col-md-4">商品名</th>
      <td class="col-md-8"><%= @product.name %></td>
    </tr>
    <tr class="row table-lign">
      <th class="col-md-4">商品説明</th>
      <td class="col-md-8"><%= @product.introduction %></td>
    </tr>
    <tr class="row">
      <th class="col-md-4">ジャンル</th>
      <td class="col-md-8"><%= @genre.name %></td>
    </tr>
    <tr class="row">
      <th class="col-md-4">税込価格(税抜価格)</th>
        <td class="col-md-8">
          <%= @product.tax_on %>
          (<%= @product.price %>)円
        </td>
      </th>
    </tr>
    <tr class="row">
      <th class="col-md-4">販売ステータス</th>
      <td class="col-md-8">
        <% if @product.is_active == true %>
          <%= "販売中" %>
        <% else %>
          <%= "販売中止" %>
        <% end %>
      </td>
    </tr>
  </table>
  <%= link_to "編集する", edit_admin_product_path(@product), class: "btn btn-info pull-right btn-lg" %>

</div>