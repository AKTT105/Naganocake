<div class="container">
  <div class="row">
    <div class="col-md-7 col-md-offset-3">
      <h2>商品一覧</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @products.each do |product| %>
          <tr>
            <td>
              <%= product.id %>
            </td>
            <td>
              <%= link_to product.name, admin_product_path(product) %>
            </td>
            <td>
              <%= product.price %>
            </td>
            <td>
              <%= product.genre_id %>
            </td>
            <td>
              <%= product.is_active %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @products %>
    </div>
  </div>
</div>