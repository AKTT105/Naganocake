 <table class="table table-hover table-inverse">
  <thead>
    <tr class="active">
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% products.each do |product| %>
    <tr>
      <td>
        <%= product.id %>
      </td>
      <td>
        <%= link_to product.name, admin_product_path(product) %>
      </td>
      <td>
        <%= product.price %>
      </td>
      <td>
        <%= product.genre.name %>
      </td>
      <td>
        <% if product.is_active == true %>
          <%= "販売中" %>
        <% else %>
          <%= "販売中止" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate products, :remote => true %>