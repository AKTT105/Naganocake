  <div class="row">
    <div class="col-xs-offset-3 col-md-6">
        <h3 class="header-background pull-left">管理者ログイン</h3>
        </div>
      
      <%= form_for(resource, as: resource_name, url: admin_session_path) do |f| %>
        <div class="row form-group">
          <label class="control-label col-md-2 col-xs-offset-3">メールアドレス</label>
          <div class="col-md-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>

        <div class="row form-group">
          <label class="control-label col-md-2 col-xs-offset-3">パスワード</label>
          <div class="col-md-3">
          <%= f.password_field :password, autocomplete: "encrypted_password", class: "form-control" %>
          </div>
        </div>

        <div class="actions col-md-6">
            <%= f.submit "ログイン", class:"btn btn-info pull-right" %>
        </div>
      <% end %>
    
  </div>