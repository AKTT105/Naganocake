<div class="container">
  <div class="row">
    <div class="col-xs-offset-3 col-md-6">
      <table class="table">
      <tr class="active">
        <th><h4>管理者ログイン</h4></th>
        </tr>
      </table>
      
      <%= form_for(resource, as: resource_name, url: admin_session_path) do |f| %>
        <div class="field form-group">
          <label>メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field form-group">
          <label>パスワード</label>
          <%= f.password_field :password, autocomplete: "encrypted_password" %>
        </div>

        <div class="actions col-xs-6">
            <%= f.submit "ログイン", class:"btn btn-info pull-right" %>
        </div>
      <% end %>
    </div>
  </div>
</div>