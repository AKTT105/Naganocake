<div class="container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-11">
      <h3>管理者ログイン</h3>

      <%= form_for(resource, as: resource_name, url: admin_session_path) do |f| %>
        <div class="field">
          <label>メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <label>パスワード</label>
          <%= f.password_field :password, autocomplete: "encrypted_password" %>
        </div>

        <div class="actions">
            <%= f.submit "ログイン", class:"btn btn-info pull-right btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>