<div class="row">
	<h3 class="header-background col-md-3">ジャンル一覧・追加</h3>
</div>
<div class="row">
	<div class="col-md-6" >
    	<div>
    			<%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
	        <%= f.label :ジャンル %>
	        <%= f.text_field :name, class: 'genre_name' %>
	        <%= f.radio_button :is_active, :true %>
	        <%= f.label :is_active, "有効", {value: :true, style: "display: inline-block;"} %>
	        <%= f.radio_button :is_active, :false %>
	        <%= f.label :is_active, "無効", {value: :false, style: "display: inline-block;"} %>
	        <%= f.submit '追加', class: 'btn btn-info' %>
    	</div>
    </div>
   </div>
    <% end %>

<div class="row">
	<div class="col-md-4">
    <table class="table table-hover table-inverse genre-index">
		<thead>
			<tr class="active">
				<th>ジャンル</th>
				<th>状態</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
		<% @genres.each do |genre| %>
			<tr>
				<td class="genre-hyoji"><%= genre.name %></td>
				<td class="genre-hyoji">
					<% if genre.is_active == TRUE %>
						<%= '有効' %>
					<% else %>
						<%= '無効' %>
					<% end %>
				</td>
				<td><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-primary genre-bt' %></td>
			</tr>
		<% end %>
		</tbody>
	</table>
</div>
</div>