<%= form_with model:@genre, local:true do |f| %>
<div class="container">
  <div class="row">
	<div class="col-xs-3">
	  <h2>ジャンル編集</h2>
    <p>ジャンル
    <div class="field row">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'col-xs-12 genre_name' %>
    </div>
    <div>
      <%= f.radio_button :genre, :true %>
      <%= f.label :is_active, "有効", {value: :true, style: "display: inline-block;"} %>
      <%= f.radio_button :genre, :false %>
      <%= f.label :is_active, "無効", {value: :false, style: "display: inline-block;"} %>
    </div>


    <div class="actions row">
      <%= f.submit '変更を保存する', class: 'btn btn-primary col-xs-12' %>
    </div>
    </p>