<div class="row">
  <div class="col-md-6 col-md-offset-2">
  <h4 class="header-background col-md-7">会員の方はこちらからログイン</h4>
  </div>
</div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "row form_horizontal" }) do |f| %>
    <div class="form_group col-md-7 col-md-offset-3">
      <div class="row">
        <%= f.label :email, "メールアドレス", class: "control-label col-md-3" %>
        <div class="col-md-8">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <%= f.label :password, "パスワード", class: "control-label col-md-3"%>
        <div class="col-md-8">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-5 col-md-offset-7">
          <%= render "customers/shared/links" %>
        </div>
      </div>

      <div class="row actions">
        <%= f.submit "ログイン", class: "btn btn-primary col-md-3 col-md-offset-3" %>
      </div>
    </div>
  <% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-2">
    <h4 class="header-background col-md-5">登録がお済みでない方</h4>
  </div>
</div>
<div class="row">
  <div class="col-md-7 col-md-offset-3">
    <%= link_to "こちら", new_registration_path(resource_name) %>から新規登録を行ってください。
  </div>
</div>