<div class="row">
  <div class="col-md-6 col-md-offset-1">
    <h4 class="header-background col-md-7">登録情報編集</h4>
  </div>
</div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="form_group col-md-8 col-md-offset-2">
    <div class="row">
      <label class="control-label col-md-2">名前</label>
      <%= f.label :last_name, "(姓)", class: "control-label col-md-2" %>
      <div class="col-md-3">
        <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
      </div>
      <%= f.label :first_name, "(名)", class: "control-label col-md-2" %>
      <div class="col-md-3">
        <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <label class="control-label col-md-2">フリガナ</label>
      <%= f.label :last_name_kana, "(セイ)", class: "control-label col-md-2" %>
      <div class="col-md-3">
        <%= f.text_field :last_name_kana, autofocus: true, class: "form-control" %>
      </div>
      <%= f.label :first_name_kana, "(メイ)", class: "control-label col-md-2"%>
      <div class="col-md-3">
        <%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <%= f.label :email, "メールアドレス", class: "control-label col-md-4" %>
      <div class="col-md-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "control-label col-md-4" %>
      <div class="col-md-3">
        <%= f.text_field :postal_code, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <%= f.label :address, "住所", class: "control-label col-md-4" %>
      <div class="col-md-7">
        <%= f.text_field :address, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <%= f.label :phone_number, "電話番号(ハイフンなし)", class: "control-label col-md-4" %>
      <div class="col-md-3">
        <%= f.text_field :phone_number, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="row actions">
      <%= f.submit "編集を保存する", class: "btn btn-success col-md-offset-3" %>
      <%= link_to "退会する", unsubscribe_customers_path, class: "btn btn-danger col-md-offset-1" %>
    </div>

  </div>

<% end %>



