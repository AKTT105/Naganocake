<h3>マイページ</h3>

<p>登録情報
  <%= link_to "編集する", edit_customers_path(@customer), class: "btn btn-primary" %>
  <%= link_to "パスワードを変更する", edit_customer_password_path, class: "btn btn-primary" %>
</p>

<table class="table">
  <tr>
    <th>氏名</th>
    <td><%= @customer.last_name %> <%= @customer.first_name %></td>
  </tr>
  <tr>
    <th>カナ</th>
    <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= @customer.postal_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= @customer.phone_number %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>
</table>

<p>配送先
  <%= link_to "一覧を見る", class: "btn btn-primary" %>
</p>
<p>注文一覧
  <%= link_to "一覧を見る", class: "btn btn-primary" %>
</p>