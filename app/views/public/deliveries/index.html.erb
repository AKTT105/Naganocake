<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h4>配送先登録/一覧</h4>
            <%= form_for (@delivery) do |f| %>
            <table class="table table-hover">
            <tr>
                <th>郵便番号(ハイフンなし)</th>
                <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
                <th>住所</th>
                <td><%= f.text_field :address, class: "col-xs-12" %></td>
            </tr>
            <tr>
                <th>宛名</th>
                <td><%= f.text_field :name %></td>
                <td><%= f.submit "登録する", class:"btn pull-right btn-primary btn-success" %></td>
            </tr>
            </table>
            </div>
            <% end %>
            
            <div class="col-md-9">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>郵便番号</th>
                        <th>住所</th>
                        <th>宛名</th>
                        <th></th>
                    </tr>
                </thead>
                <% @deliveries.each do |delivery| %>
                <tbody>
                    <tr>
                        <td>
                            <%= delivery.postal_code %>
                        </td>
                        <td>
                            <%= delivery.address %>
                        </td>
                        <td>
                            <%= delivery.name %>
                        </td>
                        <td>
                            <%= link_to "編集する", edit_delivery_path(delivery), class:"btn btn-primary btn-md" %>
                            <%= link_to "削除する", delivery_path(delivery), class:"btn btn-danger btn-md", method: :delete %>
                        </td>
                    </tr>
                </tbody>
                <% end %>
            </table>
        </div>
    </div>
</div>