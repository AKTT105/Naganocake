<div class="container">
    <div class="row">
        <div class="col-md-6">
        <h4>ショッピングカート</h4>
        <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>商品名</th>
                        <th>単価（税込み）</th>
                        <th>数量</th>
                        <th>小計</th>
                        <th></th>
                    </tr>
                </thead>
                <% @cart_products.each do |cart_product| %>
                <tbody>
                    <tr>
                        <td>
                            <%= attachment_image_tag(cart_product.product, :image, :fill, 50, 50) %>
                            <%= cart_product.product.name %>
                        </td>
                        <td>
                            <%= cart_product.product.tax_on %>
                        </td>
                        <td>
                            <%= cart_product.amount %>
                        </td>
                        <td>
                            <%= cart_product.product.price %>
                        </td>
                        <td>
                            <%= link_to "削除する", cart_product_path(cart_product), class:"btn btn-danger btn-md", method: :delete %>
                        </td>
                    </tr>
                </tbody>
                <% end %>
            </table>
        </div>
    </div>
</div>