      <div class="row">
        <div class="col-md-3">
          <h3>商品一覧 <small>(全<%= @products.count %>件)</small></h3>
        </div>
      </div>
      <!--商品一覧-->
      <%= render 'product_list', products: @products %>
      
    </div>
  </div>
  <div class="row">
    <div class="col-md-6"></div>
    <div class="col-md-3">
      <%= paginate @products %>         
    </div>
  </div>
</div>