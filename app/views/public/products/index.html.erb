<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'public/genres/genre_search', genres: @genres %>
    </div>
    <div class="col-md-9">
      <div class="row">
        <div class="col-md-3">
          <h3>商品一覧(全<%= @products.count %>件)</h3>
        </div>
      </div>
      <div class="row">
        <% @products.each do |product| %>
          <div class="col-md-3">
            <%= link_to product_path(product) do %>
              <%= attachment_image_tag(product, :image, size: '200x200', fallback: "no_image.png") %><br />
              <%= product.name %><br />
            <% end %>
            ¥<%= product.tax_on.to_s(:delimited) %>
          </div>
        <% end %>
      </div>

      <%= paginate @products %>
    </div>
  </div>
</div>