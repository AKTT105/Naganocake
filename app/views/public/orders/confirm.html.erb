<div class="container">
    <div class="row">
        <div class="col-md-8">
    	<h3><mark>注文情報確認</mark></h3>
        <%= form_with model: @order, url: done_orders_path(@order), method: :get, local: true do |f| %>
        <table class="active, table table-bordered">
		<thead>
			<tr class = "active">
				<th>商品名</th>
				<th>単価(税込)</th>
				<th>数量</th>
				<th>小計</th>
			</tr>
		</thead>

		<tbody>
			<% @order_products.each do |order_product| %>
			<tr>
				<td>
					<%#= order_product.@product.image_id %>
					<%#= attachment_image_tag(@product, :image_id, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
					<%= order_product.name %>
				</td>
				<td><%= order_product.price.to_s(:delimited) %></td>
				<td><%= order_product.amount %></td>
				<td><%= order_product.total_price.to_s(:delimited) %></td>
			</tr>
			<% end %>
		</tbody>
		</table>
		</div>

    <div class="col-md-4">
    	<table class="active, table table-bordered">
		<thead>
			<tr>
				<th class="active">送料</th>
    			<th><%= @order.postage %></th>
			</tr>
		</thead>

    		<tbody>
			<tr>
				<td class="active">商品合計</td>
	    		<td><%= @order.order_total_price.to_s(:delimited) %></td>
			</tr>
			<tr>
				<td class="active">請求金額</td>
    			<td><%#= @order.total_pay.to_s(:delimited) %></td>
			</tr>
		</tbody>
		</table>

		<div class="row">
      <div class="col-md-5">
  			<p>支払方法</p>
  			<%= @order.payment_type %>
  			<p>お届け先</p>
					<%= @order.postal_code %><%= @order.address %></br>
      		<%= @order.name %>
			<% end %>
			</div>
  </div>
</div>

