    <div class="row">
        <div class="col-md">
    <h3 class="header-background col-md-2">注文履歴一覧</h3>
        <table class="active, table table-bordered">
		<thead>
			<tr class="active">
				<th>注文日</th>
				<th>配送先</th>
				<th>注文商品</th>
				<th>支払金額</th>
				<th>ステータス</th>
				<th>注文詳細</th>
			</tr>
		</thead>

		<tbody>
			<% @orders.each do |order| %>
			<tr>
				<td><%= order.created_at.strftime('%Y/%m/%d') %></td>
				<td>
					<%= order.postal_code %></br>
					<%= order.address %></br>
					<%= order.name %>
				</td>
				<td>
				<% order.order_products.each do |order_product| %>
					<%= order_product.product.name %></br>
				<% end %>
				</td>
				<td><%= order.total_payment.to_s(:delimited) %>円</td>
				<td><%= order.status %></td>
				<%#= form_with model: @order, url: orders_path(@order), local: true do |f| %>
				<td>
					<%= link_to '表示する', order_path(id: order), class: 'btn btn-primary' %>
				</td>
			</tr>
			<% end %>
		</tbody>
		</table>
		</div>