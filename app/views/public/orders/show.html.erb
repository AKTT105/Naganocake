<div class="container">
    <div class="row">
        <div class="col-md-6">
    <h3><mark>注文履歴詳細</mark></h3>
                <%= form_with model: @order, url: orders_path(@order), local: true do |f| %>
        <table class="active, table table-bordered">
		<h4>注文情報</h4>
		<tr>
    		<th>注文日</th>
    		<td><%= @customer.last_name %> <%= @customer.first_name %></td>
  		</tr>
		<tr>
    		<th>配送先</th>
    		<td><%= @customer.last_name %> <%= @customer.first_name %></td>
  		</tr>
  		<tr>
    		<th>支払方法</th>
    		<td><%= @customer.last_name %> <%= @customer.first_name %></td>
  		</tr>
  		<tr>
    		<th>ステータス</th>
    		<td><%= @customer.last_name %> <%= @customer.first_name %></td>
  		</tr>

		<h4>請求情報</h4>
		<tr>
    		<th>商品合計</th>
    		<td><%= @customer.last_name %> <%= @customer.first_name %></td>
  		</tr>
		<tr>
    		<th>配送料</th>
    		<td><%= @customer.last_name %> <%= @customer.first_name %></td>
  		</tr>
  		<tr>
    		<th>ご請求額</th>
    		<td><%= @customer.last_name %> <%= @customer.first_name %></td>
  		</tr>

		<h4>注文内容</h4>
		<thead>
			<tr>
    			<th>商品</th>
    			<th>単価（税込）</th>
    			<th>個数</th>
    			<th>小計</th>
  		</tr>
		</thead>
		<tbody>
			<% @order_products.each do |order_product| %>
			<tr>
				<td><%= order_product. %><%= order_product.name%></td>
				<td><%= order_product.price.to_s(:delimited) %></td>
				<td><%= order_product.amount %></td>
				<td><%= order_product.total_price.to_s(:delimited) %></td>
			</tr>
			<% end %>
		</tbody>
		</table>